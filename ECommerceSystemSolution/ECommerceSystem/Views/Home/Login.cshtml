@model ECommerceSystem.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Home.cshtml";
}


<div class=""></div>
<h3 style="text-align: center; color: green">Login Page</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label id="Name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input type="text" name="Email" id="Email" class="form-control" placeholder="Username" />
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <label id="Name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            <label id="Name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input type="submit" id="Show" value="Login" class="btn btn-default" style="background-color: #4CAF50; color: white" />
            </div>
        </div>
    </div>
}

